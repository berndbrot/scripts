#!/bin/bash
declare -a args
for arg in "$@"; do
    file="${arg%:[0-9]*}"
    file="$(realpath "$file")"
    args+=("$file")
    case "$arg" in *:*)
        num="${arg##*:}"
        args+=("+$num")
        ;;
    esac
done
for editor in nvimr nvim vim; do
    if test -x "$(command -v "$editor")"; then
        "$editor" ${editor_args[$editor]} "${args[@]}"
        break
    fi
done
