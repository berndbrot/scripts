#!/bin/bash
declare -a args
for arg in "$@"; do
    file="${arg%:[0-9]*}"
    file="$(realpath "$file")"
    args+=("$file")
    if test "$file" != "$arg"; then
        num="${arg#$file:}"
        args+=("+$num")
    fi
done
for editor in nvimr nvim vim; do
    if test -x "$(command -v "$editor")"; then
        "$editor" ${editor_args[$editor]} "${args[@]}"
        break
    fi
done
