#!/bin/bash
declare -a args
for arg in "$@"; do
    file="${arg%:[0-9]*}"
    file="$(realpath "$file")"
    args+=("$file")
    case "$arg" in *:*)
        num="${arg##*:}"
        args+=("+$num")
        ;;
    esac
done
for editor in codeedit nvimr nvim vim; do
    "$editor" ${editor_args[$editor]} "${args[@]}" && break
done
